
<%= form_for(@prayer) do |f| %>
  <% if @prayer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prayer.errors.count, "error") %> prohibited this prayer from being saved:</h2>

      <ul>
      <% @prayer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="interior-content">
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, :size => "2" %> (abbrev.: NY, NJ, etc)
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email , :size => "60"%>
  </div>
  <div class="field">
    <%= f.label :request %><br />
    <%= f.text_area :request, :size => "60x3" %> (< 180 characters)
  </div>
  <div class="field">
	<%= f.label :sex %>
	<td>M <%= radio_button("prayer", "sex", "M") %></td>
	<td>F <%= radio_button("prayer", "sex", "F") %></td>
  </div>
  <div class="field">
    <%= f.label :age %>
    <%= f.text_field :age , :size => "3" %>
  </div>
  <div class="field">
	<%= f.label "What type of prayer is this?"%><br/>
	<td>Praise <%= radio_button("prayer", "prayer_type", "Praise") %></td>
	<td>Request <%= radio_button("prayer", "prayer_type", "Request") %></td>
  </div>

  <div class="actions">
    <%= f.submit "Share Your Prayer" %>
  </div>
</div>
<% end %>
