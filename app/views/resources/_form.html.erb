<%= form_for @resource, :html => {:multipart => true} do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :subtitle %><br />
    <%= f.text_field :subtitle %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :thumbnail %> <%= f.file_field :image %><br />
  </div>
  <div class="field">
    <%= f.label :document %> <%= f.file_field :document %><br />
  </div>
  <div class="field">
    <%= f.label :video %> <%= f.file_field :video %><br />
  </div>
  <div class="field">
    <%= f.label :audio %> <%= f.file_field :audio %><br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
