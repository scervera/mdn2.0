<div class="on_white">
	<div class="pagination"<%= will_paginate @movies %> </div>
<h1>Listing movies</h1>
<%= link_to 'New Movie', new_movie_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Speaker</th>
    <th>Description</th>
    <th>Featured?</th>
    <th>Carousel?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.speaker %></td>
    <td><%= movie.description %></td>
	<td><%= movie.featured %></td>
	<td><%= movie.carousel %></td>
    <td><%= link_to 'Show', movie %></td>

    <td><%= link_to((:Theater), :action => 'theater', :method => :theater, :id => movie.id ) %> </td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= button_to 'Delete Movie', { :action => "destroy", :id => movie.id }, :confirm => 'Are you sure?', :method => :delete %> </td>
  </tr>
<% end %>
</table>
	<div class="pagination"<%= will_paginate @movies %></div></br>


</div>