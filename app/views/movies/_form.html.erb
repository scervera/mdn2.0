<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :speaker %><br />
    <%= f.text_field :speaker %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "URL - http://youtu.be/" %>
    <%= f.text_field :url %>
  </div>
  <div class="field">
	<%= f.label :clip_Duration %> (minutes:seconds)
	<%= f.text_field :duration %>
  </div>
  <div class="field">
   <p>Would you like to have this movie appear on the home page of the website?</p>
    <%= f.label :yes %>
    <%= f.check_box :featured %>
  </div>
  <div class="field">
   <p>Would you like to have this movie appear on the "View More" carousel?</p>
    <%= f.label :yes %>
    <%= f.check_box :carousel %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
