<h1>Listing requests</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Church</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone</th>
    <th>Request</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.first_name %></td>
    <td><%= request.last_name %></td>
    <td><%= request.church %></td>
    <td><%= request.address1 %></td>
    <td><%= request.address2 %></td>
    <td><%= request.city %></td>
    <td><%= request.state %></td>
    <td><%= request.zip %></td>
    <td><%= request.phone %></td>
    <td><%= request.request %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

